  },
  "storage": {
    "source": {
      "tmp-dir": "slicer/tmp"
    },
    "destination": {
      "update-dir": "slicer/updates"
    }
  },
  "backup": {
    "exclude-dirs": [ "cache", "fake" ]
  },
  "base_dir": ""
}