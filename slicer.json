{
  "app": {
    "name": "slicer/slicer",
    "description": "",
    "app_key": "",
    "app_secret": ""
  },
  "options": {
    "update": {
      "backup-files": true,
      "backup-database": true
    }
  },
  "update_file": "Slicer\\Update",
